{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "testcafe"
    ],
    "extends": "plugin:testcafe/recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ]
    }
}